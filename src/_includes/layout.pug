  block body
    body

      //- load combined svg file (with symbols) into body
      include sprite-script

      div.body-wrapper
        block controls
          div.controls
            header
              block header
                h1 Streamline 3.0
              div.btn-group
                div.ui-btn.buy-btn
                  div.ui-btn-content Buy
            footer
              div.section-nav
                div.ui-btn.menu-btn
                  div.ui-btn-content: svg: use(xlink:href="#icon-ui-hamburger")
                div.menu
                  ul
                    li: a(href="#main").is-active Welcome
                    li: a(href="#icons") Over 30,000 Icons
                    li: a(href="#weights") 3 Distinct Weights
                    li: a(href="#workflow") Crazy Fast Workflow
                    li: a(href="#action") Icons in Action
                    li: a(href="#brands") Brands Love'm
                    li: a(href="#webviewer") Web Viewer
                    li: a(href="#options") Package Options
                    li: a(href="#price") Buy Now
              div.color-selector
                ul
                  li: a.white.is-active(): span White
                  li: a.color(): span Color
                  li: a.dark(): span Dark
