//- layout.pug
html
  head
    block head
      title Streamline 3.0

    block meta
      meta(charset="utf-8")
      meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
      meta(name="HandheldFriendly" content="True")
      meta(name="MobileOptimized" content="320")
      meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no")

      meta(name='description', content="Streamline 3.0 is out! 30,000 icons in three unique weights. 53 categories. 720 subcategories. The world's largest icon library.")

      //- Schema.org markup for Google+
      meta(itemprop='name', content='Streamline 3.0')
      meta(itemprop='description', content="Streamline 3.0 is out! 30,000 icons in three unique weights. 53 categories. 720 subcategories. The world's largest icon library.")
      meta(itemprop='image', content='https://streamlineicons.com/_assets/img/streamline3-card.jpg')

      //- Twitter Card data
      meta(name='twitter:card', content='summary_large_image')
      meta(name='twitter:site', content='@webalys')
      meta(name='twitter:title', content='Streamline 3.0')
      meta(name='twitter:description', content="Streamline 3.0 is out! 30,000 icons in three unique weights. 53 categories. 720 subcategories. The world's largest icon library.")
      meta(name='twitter:creator', content='@webalys')

      //- Twitter summary card with large image must be at least 280x150px
      meta(name='twitter:image:src', content='https://streamlineicons.com/_assets/img/streamline3-card.jpg')

      //- Open Graph data
      meta(property='og:title', content='Streamline 3.0')
      meta(property='og:type', content='article')
      meta(property='og:url', content='http://streamlineicons.com/')
      meta(property='og:image', content='https://www.streamlineicons.com/_assets/img/smiling-laptop.png')
      meta(property='og:description', content="Streamline 3.0 is out! 30,000 icons in three unique weights. 53 categories. 720 subcategories. The world's largest icon library.")
      meta(property='og:site_name', content='Streamline 3.0')

    block stylesandscripts
      link(rel="stylesheet" type="text/css" href="/style.css")
      link(id="favicon" rel="shortcut icon" type="image/png" href="/_assets/img/favicon-light.png")

      //- Google Analytics
      script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-15651803-15')
